@model List<Person>


@{
}


<div>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Lastname</th>
                <th>Birth Place</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var kisi in Model)
            {
                <tr>
                    <td>@kisi.Id</td>
                    <td>@kisi.Name</td>
                    <td>@kisi.Lastname</td>
                    <td>@kisi.BirthPlace</td>
                </tr>            
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4">
                    <b>Toplam :</b> @Model.Count
                </td>
            </tr>
        </tfoot>
    </table>
</div>